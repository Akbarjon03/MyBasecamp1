<div class="container">
  <div class="card">
    <div class="card-header">
        <p class="fw-bolder fs-1 text-center">Log in</p>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
        </div>
        <br/>
        <div class="field form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
        </div>
        <br/>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Log in", class: "hp" %>
        </div>
        <br>
        <%= render "devise/shared/links" %>
      <% end %>
        
    </div>
  </div>
</div>
